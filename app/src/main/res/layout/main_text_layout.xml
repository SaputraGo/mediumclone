<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:layout_alignBottom="@+id/recyclerView_time"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp"
                android:padding="4dp" />

            <TextView
                android:id="@+id/recyclerView_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/recyclerView_maintitle"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="recyclerView_title"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/recyclerView_maintitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="recyclerView_maintitle"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/recyclerView_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/recyclerView_title"
                android:layout_below="@+id/recyclerView_title"
                android:text="recyclerView_author"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/recyclerView_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/recyclerView_author"
                android:layout_below="@+id/recyclerView_author"
                android:text="recyclerView_date" />

            <TextView
                android:id="@+id/recyclerView_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recyclerView_date"
                android:text="recyclerView_time" />


            <ImageView
                android:id="@+id/bookmark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/imageView"
                android:layout_marginEnd="15dp"
                android:paddingTop="10dp"
                android:src="@drawable/ic_bookmark" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>